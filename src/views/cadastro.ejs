<%- include('./includes/head.ejs')%>
    <%- include('./includes/nav.ejs')%>


        <section class="main-container">
            <h1>
                <%- titulo %>
            </h1>
            <p class="text-centro descricao">A criação da conta será analisada antes da aprovação</p>

            <div class="conteudo-tabela">
                <%- include('./includes/messages.ejs')%>

                <div class="conteudo-login">
                    <div class="formulario-centro login-cadastro">
                        <h4>Cadastrar uma conta</h4>
                        <form action="/cadastro/register" method="POST" class="formulario">
                            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                            <input type="text" name="user" id="user" placeholder="Email">
                            <br>
                            <input type="password" name="userPassword" id="userPassword" placeholder="Senha">
                            <br>
                            <input type="password" name="userPasswordRepeat" id="userPasswordRepeat"
                                placeholder="Confime a senha">
                            <br>

                            <button type="submit">Criar conta</button>
                        </form>
                    </div>
                    <div class="conteudo-cadastro cadastro-page">
                        <br>
                        <p class="descricao-cadastro">Ja possui uma conta ?</p>
                        <h5><a href="/login">Fazer login</a></h5>
                    </div>
                </div>
                <div>
        </section>
        <%- include('./includes/footer.ejs')%>